{
    "git.autofetch": true,
    "editor.formatOnSave": true,
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 15,
    "editor.fontFamily": "'D2Coding'",
    "editor.fontLigatures": true,
    "terminal.integrated.scrollback": 20000,
    "git.enableSmartCommit": true,
    "chat.editing.alwaysSaveWithGeneratedChanges": true,
    "settingsSync.ignoredExtensions": [],
    "git.confirmSync": false,
    "dart.flutterSdkPath": "C:/Users/jaeoh/flutter_windows_3.29.0-stable/flutter",
    "dart.sdkPath": "C:/Users/jaeoh/flutter_windows_3.29.0-stable/flutter/bin/cache/dart-sdk",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "[dart]": {
        "editor.defaultFormatter": null
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "window.confirmSaveUntitledWorkspace": false,
    "editor.wordWrap": "on",
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "markdown",
        "scminput"
    ],
    "vsicons.dontShowNewVersionMessage": true,
    "cursor.composer.cmdPFilePicker2": true,
    "editor.lineNumbers": "on",
    // VIM 설정 - 플랫폼 독립적 워크플로우
    "vim.leader": "<space>", // 스페이스를 리더키로 설정
    "vim.useSystemClipboard": true, // 시스템 클립보드와 자동 연동
    "vim.autoSwitchInputMethod.enable": false,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.handleKeys": {
        "<C-[>": true,
        "<C-a>": false, // Vim의 increment 우선
        "<C-b>": false,
        "<C-c>": false, // Vim의 Escape 우선
        "<C-j>": true,
        "<C-v>": false, // Vim의 Visual Block 우선
        "<C-x>": false, // Vim의 decrement 우선
        "<C-z>": false, // Vim의 suspend 우선
        "<C-s>": false, // Insert 모드에서만 허용
        "<C-f>": true,  // Vim의 페이지 다운 허용
        "<C-u>": true,  // Vim의 페이지 업 허용
        "<C-d>": true   // Vim의 반 페이지 다운 허용
    },
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // 기본 개발 기능
        {
            "before": ["g", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.referenceSearch.trigger"]
        }
        // Leader 기반 기능은 keybindings.json에서 관리
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Visual 모드에서 Leader 기반 기능
        {
            "before": ["<leader>", "c"],
            "after": ["y"]
        },
        {
            "before": ["<leader>", "x"],
            "after": ["d"]
        }
    ],
    // 한글 관련 추가 설정
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "on" // 코드에서는 활성화
    },
    "editor.quickSuggestionsDelay": 200,
    "vim.smartRelativeLine": true,
    "workbench.colorTheme": "Visual Studio Dark",
    "remote.autoForwardPortsSource": "hybrid",
    "cursor.general.disableHttp2": true,
    "diffEditor.maxComputationTime": 0,
    "remote.SSH.remotePlatform": {
        "server": "linux"
    }
}