{
    "git.autofetch": true,
    "editor.formatOnSave": true,
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 15,
    "editor.fontFamily": "'D2Coding'",
    "editor.fontLigatures": true,
    "terminal.integrated.scrollback": 20000,
    "git.enableSmartCommit": true,
    "chat.editing.alwaysSaveWithGeneratedChanges": true,
    "settingsSync.ignoredExtensions": [],
    "git.confirmSync": false,
    "dart.flutterSdkPath": "C:/Users/jaeoh/flutter_windows_3.29.0-stable/flutter",
    "dart.sdkPath": "C:/Users/jaeoh/flutter_windows_3.29.0-stable/flutter/bin/cache/dart-sdk",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "[dart]": {
        "editor.defaultFormatter": null
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "window.confirmSaveUntitledWorkspace": false,
    "editor.wordWrap": "on",
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "markdown",
        "scminput"
    ],
    "vsicons.dontShowNewVersionMessage": true,
    "cursor.composer.cmdPFilePicker2": true,
    "editor.lineNumbers": "on",
    // VIM 설정
    "vim.leader": "", // 리더키 비활성화
    "vim.autoSwitchInputMethod.enable": false,
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-[>": true,
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-j>": true,
        "<C-v>": false,
        "<C-x>": false,
        "<C-z>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        }
    ],
    // 한글 관련 추가 설정
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "on" // 코드에서는 활성화
    },
    "editor.quickSuggestionsDelay": 200,
    "vim.smartRelativeLine": true,
    "workbench.colorTheme": "Visual Studio Dark",
    "remote.autoForwardPortsSource": "hybrid",
    "terminal.integrated.fontSize": 12,
    "cursor.general.disableHttp2": true,
    "diffEditor.maxComputationTime": 0
}