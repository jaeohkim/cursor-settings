[
    /*
     * Show Editors
     * 빠른 에디터 전환을 위한 키바인딩
     */
    {
        "key": "ctrl+y",
        "command": "workbench.action.quickOpen"
    },
    /*
     * Navigation (Go To)
     * 에디터 내 네비게이션 및 이동 관련 키바인딩
     */
    {
        "key": "ctrl+o",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFile"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "ctrl+shift+o",
        "command": "-workbench.action.gotoSymbol"
    },
    {
        "key": "alt+d",
        "command": "gotonext",
        "when": "!editorTextFocus && !textCompareEditorVisible"
    },
    {
        "key": "ctrl+alt+d",
        "command": "git.navigateToPreviousDiff"
    },
    /*
     * Find & Search (Cross Platform)
     * 플랫폼별 검색 및 찾기 기능 통합
     */
    // Windows - 검색 결과 네비게이션
    {
        "key": "ctrl+n",
        "command": "editor.action.nextMatchFindAction",
        "when": "editorFocus && findWidgetVisible && isWindows"
    },
    {
        "key": "ctrl+p",
        "command": "editor.action.previousMatchFindAction",
        "when": "editorFocus && findWidgetVisible && isWindows"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.findNext",
        "when": "terminalFindFocused && isWindows"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.terminal.findPrevious",
        "when": "terminalFindFocused && isWindows"
    },
    // Mac - 검색 결과 네비게이션
    {
        "key": "cmd+n",
        "command": "editor.action.nextMatchFindAction",
        "when": "editorFocus && findWidgetVisible && isMac"
    },
    {
        "key": "cmd+p",
        "command": "editor.action.previousMatchFindAction",
        "when": "editorFocus && findWidgetVisible && isMac"
    },
    {
        "key": "cmd+n",
        "command": "workbench.action.terminal.findNext",
        "when": "terminalFindFocused && isMac"
    },
    {
        "key": "cmd+p",
        "command": "workbench.action.terminal.findPrevious",
        "when": "terminalFindFocused && isMac"
    },
    // 충돌하는 기본 검색 키바인딩 비활성화
    {
        "key": "cmd+g",
        "command": "-editor.action.nextMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+g",
        "command": "-editor.action.previousMatchFindAction",
        "when": "editorFocus"
    },
    /*
     * Font Zoom (Cross Platform)
     * 에디터 및 터미널 폰트 크기 조절
     */
    // Windows - 폰트 줌
    {
        "key": "alt+oem_minus",
        "command": "editor.action.fontZoomOut",
        "when": "editorTextFocus && isWindows"
    },
    {
        "key": "alt+oem_minus",
        "command": "workbench.action.terminal.fontZoomOut",
        "when": "terminalFocus && isWindows"
    },
    {
        "key": "alt+shift+oem_minus",
        "command": "editor.action.fontZoomIn",
        "when": "editorTextFocus && isWindows"
    },
    {
        "key": "alt+shift+oem_minus",
        "command": "workbench.action.terminal.fontZoomIn",
        "when": "terminalFocus && isWindows"
    },
    // Mac - 폰트 줌
    {
        "key": "cmd+-",
        "command": "editor.action.fontZoomOut",
        "when": "editorTextFocus && isMac"
    },
    {
        "key": "cmd+-",
        "command": "workbench.action.terminal.fontZoomOut",
        "when": "terminalFocus && isMac"
    },
    {
        "key": "cmd+shift+-",
        "command": "editor.action.fontZoomIn",
        "when": "editorTextFocus && isMac"
    },
    {
        "key": "cmd+shift+-",
        "command": "workbench.action.terminal.fontZoomIn",
        "when": "terminalFocus && isMac"
    },
    // 충돌하는 워크벤치 줌 명령 비활성화
    {
        "key": "cmd+-",
        "command": "-workbench.action.zoomOut"
    },
    /*
     * Terminal (Cross Platform)
     * 터미널 토글 및 제어
     */
    {
        "key": "alt+oem_7",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "isWindows"
    },
    {
        "key": "cmd+'",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "isMac"
    },
    /*
     * Source Control (Cross Platform)
     * Git 및 소스 컨트롤 관련 기능
     */
    {
        "key": "shift+alt+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active && isWindows"
    },
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active && isMac"
    },
    // 충돌하는 기본 소스 컨트롤 키바인딩 비활성화
    {
        "key": "shift+cmd+g",
        "command": "-workbench.action.terminal.openDetectedLink",
        "when": "accessibleViewIsShown && terminalHasBeenCreated && accessibleViewCurrentProviderId == 'terminal'"
    },
    {
        "key": "shift+cmd+g",
        "command": "-workbench.action.terminal.findPrevious",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocusInAny && terminalHasBeenCreated || terminalFocusInAny && terminalProcessSupported"
    },
    /*
     * Bookmarks (Cross Platform)
     * 북마크 확장 기능 - 양쪽 플랫폼 지원
     */
    {
        "key": "shift+alt+b",
        "command": "workbench.view.extension.bookmarks",
        "when": "editorFocus && isWindows"
    },
    {
        "key": "shift+cmd+b",
        "command": "workbench.view.extension.bookmarks",
        "when": "editorFocus && isMac"
    },
    /*
     * VIM (Cross Platform)
     * VIM 스타일 키바인딩
     */
    {
        "key": "ctrl+[",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.mode != 'Normal'"
    },
    /*
     * List Navigation (VIM Style)
     * VIM 스타일 리스트 네비게이션
     */
    {
        "key": "ctrl+n",
        "command": "list.focusDown",
        "when": "listFocus && !inQuickOpen && !findWidgetVisible"
    },
    {
        "key": "ctrl+p",
        "command": "list.focusUp",
        "when": "listFocus && !inQuickOpen && !findWidgetVisible"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },
    /*
     * Mac-style Windows Keybindings (Alt = Cmd Position)
     * Windows에서 Mac 스타일 키보드 단축키 제공 (Alt 키를 Cmd 키처럼 사용)
     */
    // 명령 팔레트
    {
        "key": "alt+shift+p",
        "command": "workbench.action.showCommands",
        "when": "isWindows"
    },
    // 빠른 열기
    {
        "key": "alt+p",
        "command": "workbench.action.quickOpen",
        "when": "isWindows"
    },
    // 설정
    {
        "key": "alt+oem_comma",
        "command": "workbench.action.openSettings",
        "when": "isWindows"
    },
    // 파일 열기
    {
        "key": "alt+o",
        "command": "workbench.action.files.openFile",
        "when": "isWindows"
    },
    // 다른 이름으로 저장
    {
        "key": "alt+shift+s",
        "command": "workbench.action.files.saveAs",
        "when": "isWindows"
    },
    // 모든 탭 닫기
    {
        "key": "alt+shift+w",
        "command": "workbench.action.closeAllEditors",
        "when": "isWindows"
    },
    // 최근에 닫은 탭 다시 열기
    {
        "key": "alt+shift+t",
        "command": "workbench.action.reopenClosedEditor",
        "when": "isWindows"
    },
    // 탭 네비게이션 (1-9)
    {
        "key": "alt+1",
        "command": "workbench.action.openEditorAtIndex1",
        "when": "isWindows"
    },
    {
        "key": "alt+2",
        "command": "workbench.action.openEditorAtIndex2",
        "when": "isWindows"
    },
    {
        "key": "alt+3",
        "command": "workbench.action.openEditorAtIndex3",
        "when": "isWindows"
    },
    {
        "key": "alt+4",
        "command": "workbench.action.openEditorAtIndex4",
        "when": "isWindows"
    },
    {
        "key": "alt+5",
        "command": "workbench.action.openEditorAtIndex5",
        "when": "isWindows"
    },
    {
        "key": "alt+6",
        "command": "workbench.action.openEditorAtIndex6",
        "when": "isWindows"
    },
    {
        "key": "alt+7",
        "command": "workbench.action.openEditorAtIndex7",
        "when": "isWindows"
    },
    {
        "key": "alt+8",
        "command": "workbench.action.openEditorAtIndex8",
        "when": "isWindows"
    },
    {
        "key": "alt+9",
        "command": "workbench.action.openEditorAtIndex9",
        "when": "isWindows"
    },
    // 마지막 탭
    {
        "key": "alt+0",
        "command": "workbench.action.lastEditorInGroup",
        "when": "isWindows"
    },
    // 찾기
    {
        "key": "alt+f",
        "command": "actions.find",
        "when": "isWindows && editorFocus"
    },
    // 바꾸기
    {
        "key": "alt+shift+f",
        "command": "editor.action.startFindReplaceAction",
        "when": "isWindows && editorFocus"
    },
    // 파일에서 찾기
    {
        "key": "alt+shift+h",
        "command": "workbench.action.findInFiles",
        "when": "isWindows"
    },
    // 줄로 이동
    {
        "key": "alt+g",
        "command": "workbench.action.gotoLine",
        "when": "isWindows"
    },
    // 주석 토글
    {
        "key": "alt+oem_2",
        "command": "editor.action.commentLine",
        "when": "isWindows"
    },
    // 문서 포맷
    {
        "key": "alt+shift+i",
        "command": "editor.action.formatDocument",
        "when": "isWindows"
    },
    // 심볼로 이동
    {
        "key": "alt+r",
        "command": "workbench.action.gotoSymbol",
        "when": "isWindows"
    },
    // 터미널 토글
    {
        "key": "alt+oem_3",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "isWindows"
    },
    // 사이드바 토글
    {
        "key": "alt+b",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "isWindows"
    },
    // 탐색기
    {
        "key": "alt+shift+e",
        "command": "workbench.view.explorer",
        "when": "isWindows"
    },
    // 확장
    {
        "key": "alt+shift+x",
        "command": "workbench.view.extensions",
        "when": "isWindows"
    },
    // 문제
    {
        "key": "alt+shift+m",
        "command": "workbench.actions.view.problems",
        "when": "isWindows"
    },
    // 출력
    {
        "key": "alt+shift+u",
        "command": "workbench.action.output.toggleOutput",
        "when": "isWindows"
    },
    // 디버그 콘솔
    {
        "key": "alt+shift+y",
        "command": "workbench.debug.action.toggleRepl",
        "when": "isWindows"
    },
    // 새 터미널
    {
        "key": "alt+shift+oem_3",
        "command": "workbench.action.terminal.new",
        "when": "isWindows"
    },
    /*
     * Cursor AI Chat (Cross Platform)
     * Cursor의 AI 채팅 및 에이전트 기능
     */
    // Windows - AI 채팅 기능
    {
        "key": "alt+l",
        "command": "composerMode.chat",
        "when": "isWindows"
    },
    {
        "key": "shift+alt+l",
        "command": "composerMode.agent",
        "when": "isWindows"
    },
    {
        "key": "ctrl+alt+l",
        "command": "composer.newAgentChat",
        "when": "isWindows"
    },
    // Mac - AI 채팅 기능
    {
        "key": "cmd+l",
        "command": "composerMode.chat",
        "when": "isMac"
    },
    {
        "key": "shift+cmd+l",
        "command": "composerMode.agent",
        "when": "isMac"
    },
    {
        "key": "shift+option+l",
        "command": "composer.newAgentChat",
        "when": "isMac"
    },
    /*
     * Advanced Windows Settings
     * Windows 전용 고급 설정 및 특수 기능
     */
    // AI 설정 패널
    {
        "key": "shift+alt+j",
        "command": "-bookmarks.expandSelectionToPrevious",
        "when": "isWindows && editorTextFocus"
    },
    {
        "key": "shift+alt+j",
        "command": "aiSettings.action.open",
        "when": "isWindows && !isSettingsPaneOpen"
    },
    {
        "key": "ctrl+shift+j",
        "command": "-aiSettings.action.open",
        "when": "isWindows && !isSettingsPaneOpen"
    },
    // 파일에서 찾기 (다중 컨텍스트)
    {
        "key": "shift+alt+f",
        "command": "workbench.action.findInFiles",
        "when": "isWindows"
    },
    {
        "key": "ctrl+shift+f",
        "command": "-workbench.action.findInFiles",
        "when": "isWindows"
    },
    // 디버그 뷰
    {
        "key": "shift+alt+d",
        "command": "workbench.view.debug",
        "when": "isWindows && viewContainer.workbench.view.debug.enabled"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.view.debug",
        "when": "isWindows && viewContainer.workbench.view.debug.enabled"
    },
    // 소스 컨트롤 뷰 (기본 키바인딩 비활성화)
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "isWindows && workbench.scm.active"
    },
    // 컴포저 관련 기능
    {
        "key": "alt+n",
        "command": "composer.createNewWithPrevContext",
        "when": "isWindows && (composerFocused || focusedView =~ /^workbench.panel.aichat.view/)"
    },
    {
        "key": "ctrl+n",
        "command": "-composer.createNewWithPrevContext",
        "when": "isWindows && (composerFocused || focusedView =~ /^workbench.panel.aichat.view/)"
    },
    // AI 팝업
    {
        "key": "alt+k",
        "command": "aipopup.action.modal.generate",
        "when": "isWindows && editorFocus && !composerBarIsVisible"
    },
    {
        "key": "ctrl+k",
        "command": "-aipopup.action.modal.generate",
        "when": "isWindows && editorFocus && !composerBarIsVisible"
    },
    // 에이전트에게 전송
    {
        "key": "alt+l",
        "command": "composer.sendToAgent",
        "when": "isWindows && editorHasPromptBar && editorPromptBarFocused"
    },
    {
        "key": "ctrl+l",
        "command": "-composer.sendToAgent",
        "when": "isWindows && editorHasPromptBar && editorPromptBarFocused"
    },
    // 터미널 찾기
    {
        "key": "alt+f",
        "command": "workbench.action.terminal.focusFind",
        "when": "isWindows && (terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocusInAny && terminalHasBeenCreated || terminalFocusInAny && terminalProcessSupported)"
    },
    {
        "key": "ctrl+f",
        "command": "-workbench.action.terminal.focusFind",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocusInAny && terminalHasBeenCreated || terminalFocusInAny && terminalProcessSupported"
    },
    // 에러 수정
    {
        "key": "shift+alt+d",
        "command": "composer.fixerrormessage",
        "when": "@composer.isCursorOnLint"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-composer.fixerrormessage",
        "when": "@composer.isCursorOnLint"
    },
    /*
     * Diff Navigation (Prioritized Context Handling)
     * 차이점 네비게이션 - 컨텍스트별 우선순위 처리
     */
    // 다음 변경사항 (우선순위: 인라인 diff > 비교 에디터 > 일반 에디터)
    {
        "key": "alt+d",
        "command": "editor.action.inlineDiffs.nextChange",
        "when": "editorTextFocus && @inlineDiffs.nextChange.isActiveEditorWithDiffs"
    },
    {
        "key": "alt+d",
        "command": "workbench.action.compareEditor.nextChange",
        "when": "textCompareEditorVisible && !@inlineDiffs.nextChange.isActiveEditorWithDiffs"
    },
    {
        "key": "alt+d",
        "command": "workbench.action.editor.nextChange",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0' && !@inlineDiffs.nextChange.isActiveEditorWithDiffs"
    },
    // 이전 변경사항
    {
        "key": "ctrl+alt+d",
        "command": "editor.action.inlineDiffs.previousChange",
        "when": "editorTextFocus && @inlineDiffs.previousChange.isActiveEditorWithDiffs"
    },
    {
        "key": "ctrl+alt+d",
        "command": "workbench.action.compareEditor.previousChange",
        "when": "textCompareEditorVisible && !@inlineDiffs.previousChange.isActiveEditorWithDiffs"
    },
    {
        "key": "ctrl+alt+d",
        "command": "workbench.action.editor.previousChange",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0' && !@inlineDiffs.previousChange.isActiveEditorWithDiffs"
    },
    // 기본 키바인딩 비활성화
    {
        "key": "alt+j",
        "command": "-editor.action.inlineDiffs.nextChange",
        "when": "editorTextFocus && @inlineDiffs.nextChange.isActiveEditorWithDiffs"
    },
    {
        "key": "alt+k",
        "command": "-editor.action.inlineDiffs.previousChange",
        "when": "editorTextFocus && @inlineDiffs.previousChange.isActiveEditorWithDiffs"
    },
    {
        "key": "alt+f5",
        "command": "-workbench.action.compareEditor.nextChange",
        "when": "textCompareEditorVisible"
    },
    {
        "key": "shift+alt+f5",
        "command": "-workbench.action.compareEditor.previousChange",
        "when": "textCompareEditorVisible"
    },
    {
        "key": "alt+f5",
        "command": "-workbench.action.editor.nextChange",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0'"
    },
    {
        "key": "shift+alt+f5",
        "command": "-workbench.action.editor.previousChange",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0'"
    },
    /*
     * Terminal and Editor Navigation
     * 터미널 및 에디터 간 네비게이션
     */
    // 터미널 간 이동
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+oem_period",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    // 에디터 간 이동
    {
        "key": "ctrl+oem_period",
        "command": "workbench.action.nextEditor",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.previousEditor",
        "when": "!terminalFocus"
    },
    // 기본 키바인딩 비활성화
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    /*
     * VIM Style Workflow (Cross Platform)
     * Vim 스타일 워크플로우 - 플랫폼 독립적
     */
    // VIM과 충돌하는 기본 키바인딩 비활성화
    {
        "key": "ctrl+c",
        "command": "-editor.action.clipboardCopyAction",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+v",
        "command": "-editor.action.clipboardPasteAction",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+x",
        "command": "-editor.action.clipboardCutAction",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+a",
        "command": "-editor.action.selectAll",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+z",
        "command": "-undo",
        "when": "vim.mode != 'Insert'"
    },
    // Mac에서도 동일하게 적용
    {
        "key": "cmd+c",
        "command": "-editor.action.clipboardCopyAction",
        "when": "vim.mode != 'Insert' && isMac"
    },
    {
        "key": "cmd+v",
        "command": "-editor.action.clipboardPasteAction",
        "when": "vim.mode != 'Insert' && isMac"
    },
    {
        "key": "cmd+x",
        "command": "-editor.action.clipboardCutAction",
        "when": "vim.mode != 'Insert' && isMac"
    },
    {
        "key": "cmd+a",
        "command": "-editor.action.selectAll",
        "when": "vim.mode != 'Insert' && isMac"
    },
    {
        "key": "cmd+z",
        "command": "-undo",
        "when": "vim.mode != 'Insert' && isMac"
    },
    // Insert 모드에서는 일부 Ctrl/Cmd 키 허용 (점진적 전환)
    {
        "key": "ctrl+s",
        "command": "workbench.action.files.save",
        "when": "vim.mode == 'Insert' && isWindows"
    },
    {
        "key": "cmd+s",
        "command": "workbench.action.files.save",
        "when": "vim.mode == 'Insert' && isMac"
    },
    // Vim Normal 모드에서 Leader 기반 단축키 (에디터 포커스 시에만)
    {
        "key": "space w",
        "command": "workbench.action.files.save",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space q",
        "command": "workbench.action.closeActiveEditor",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space a",
        "command": "editor.action.selectAll",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space f",
        "command": "actions.find",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space r",
        "command": "editor.action.startFindReplaceAction",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space shift+f",
        "command": "workbench.action.findInFiles",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space o",
        "command": "workbench.action.quickOpen",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space p",
        "command": "workbench.action.showCommands",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space e",
        "command": "workbench.view.explorer",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    {
        "key": "space t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "vim.mode == 'Normal' && vim.active && editorTextFocus"
    },
    // 사이드 패널에서 스페이스 정상 입력 허용
    {
        "key": "space",
        "command": "type",
        "args": { "text": " " },
        "when": "!editorTextFocus && !vim.active"
    }
]